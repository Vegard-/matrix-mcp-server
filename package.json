{
  "name": "matrix-mcp-server",
  "version": "1.0.0",
  "description": "MCP server that fronts a Matrix homeserver",
  "main": "dist/http-server.js",
  "bin": {
    "matrix-mcp-server": "dist/stdio-server.js"
  },
  "type": "module",
  "scripts": {
    "start": "node dist/http-server.js",
    "start:stdio": "node dist/stdio-server.js",
    "build": "tsc",
    "prepare": "tsc",
    "dev": "NODE_OPTIONS=--no-warnings tsx watch src/http-server.ts",
    "dev:stdio": "NODE_OPTIONS=--no-warnings tsx src/stdio-server.ts",
    "lint": "eslint .",
    "test": "jest"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.16.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.2.0",
    "matrix-js-sdk": "^37.4.0",
    "node-fetch": "^3.3.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.1",
    "@types/node": "^22.15.0",
    "typescript": "^5.8.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.19.4"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
